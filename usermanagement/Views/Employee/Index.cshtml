@model IEnumerable<usermanagement.Models.Employee>

<div class="container-fluid">
    <div>
        <a asp-action="Create" asp-controller="Employee" class="btn btn-primary">
            Create Department
        </a>
    </div>

    <table id="myTable" class="display">
        <thead>
            <tr>
                <th>Name</th>
                <th>Company Name</th>
                <th>Department Name</th>
                <th>Email</th>
                <th>Phone No#</th>
                <th>IsActive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.company</td>
                    <td>@item.department</td>
                    <td>@item.email</td>
                    <td>@item.phoneno</td>
                    <td>@item.isactive</td>

                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary">Edit</a>

                        <!-- Recommended: Use a POST form for delete -->
                        <form asp-controller="Employee" asp-action="Delete" asp-route-id="@item.id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return conform('Are you sure you want to delete this user?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('#myTable').DataTable();
            });
        </script>
    }
</div>
